
@{
    ViewBag.Title = "Yeni Kayıt";
    Layout = "~/Views/Shared/_LayoutSabit.cshtml";
}


<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src='http://maps.google.com/maps/api/js?sensor=false&libraries=places'></script>
<script src="@Url.Content("~/Content/js/locationpicker.jquery.js") "></script>

Location: <input type="text" id="us2-address" style="width: 430px" />


<div id="us2" style="width: 500px; height: 400px;"></div>
        Lat.: <input type="text" id="us2-lat" />
           Long.: <input type="text" id="us2-lon" />

<script>
$('#us2').locationpicker({
    location: { latitude: 38.720957122705194, longitude: 35.48629593849182 },
	radius: 10,
	inputBinding:
        {
        latitudeInput: $('#us2-lat'),
        longitudeInput: $('#us2-lon'),
        locationNameInput: $('#us2-address')
    }
    });
</script>


